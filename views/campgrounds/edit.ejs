<% layout ('layouts/boilerplate') %> 
<!-- For editing current campgrounds -->


<link href="/stylesheets/update.css" rel="stylesheet">

<div class="row">
    <section class="background-radial-gradient overflow-hidden">
        <div class="container px-4 py-5 px-lg-5 text-center text-lg-start my-5">
          <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(0, 0%, 100%)">
                    Edit Current Campground!
                </h1>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
              <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
              <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>
      
              <div class="card bg-glass">
                <div class="card-body px-4 py-5 px-md-5">
                    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="validated-form"  enctype="multipart/form-data" novalidate>
                    <div class="row">

                    <!-- Title input -->
                        <div class="col-md-6 mb-4">
                            <div class="form-label">
                                <label class="form-label" for="title">Title</label>
                                <input class="form-control" type="text" id="title"  name="campground[title]" value="<%= campground.title %>" required>
                                <div class="valid-feedback"></div>
                            </div>
                      </div>

                    <!-- Price input -->
                        <div class="col-md-6 mb-4">
                            <div class="form-outline">
                                <label for="price" class="form-label">Campground Price</label>
                                <div class="input-group">
                                    <span class="input-group-text" id="price-label">$</span>
                                    <input type="text" class="form-control" id="price" name="campground[price]" value="<%= campground.price %>"placeholder="0.00" aria-label="price-label" aria-describedby="price-label" required>
                                    <div class="valid-feedback"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Location input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location"  name="campground[location]" value="<%= campground.location %>" required>
                        <div class="valid-feedback"></div>
                    </div>
                    
                    <!-- Description input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description"  name="campground[description]" required><%= campground.description %></textarea>
                        <div class="valid-feedback"></div>
                    </div>

                    <!-- Image Input -->
                    <div class="form-outline mb-4">
                        <label for="images" class="form-label">Add Image(s)</label>
                        <input class="form-control" type="file" id="images" name="images" multiple>
                    </div>

                    <div class="form-outline mb-3">
                        <% campground.images.forEach(function(img, i) { %> 
                            <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                                <label class="form-check-label" for="image-<%= i %>">Delete Image</label>
                              </div>
                        <% }) %> 
                    </div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-2 offset-md-3">
                        Update Campgrounds
                    </button>
                    <!-- Register buttons -->
                    <div class="text-center">
                        <a href="/campgrounds/<%= campground._id %>">Back To Campround</a>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</div>
